CREATE KEYSPACE trainingmanager WITH replication = {'class': 'SimpleStrategy', 'replication_factor': '1'}  AND durable_writes = true;

CREATE TYPE trainingmanager.address (
    door_number text,
    street_name text,
    area text,
    city text,
    state text,
    country text,
    zipcode text
);

CREATE TYPE trainingmanager.department (
    department_id uuid,
    department_name text,
    department_description text,
    created_dtm timestamp,
    updated_dtm timestamp
);

CREATE TYPE trainingmanager.privilege (
    creation int,
    deletion int,
    updation int,
    read int,
    department_id uuid
);

CREATE TYPE trainingmanager.role (
    role_id uuid,
    role_name text,
    role_description text,
    role_type text,
    privilege frozen<privilege>,
    created_dtm timestamp,
    updated_dtm timestamp
);

CREATE TABLE trainingmanager.department (
    department_id uuid PRIMARY KEY,
    department_name text,
    department_description text,
    created_dtm timestamp,
    updated_dtm timestamp
);
CREATE INDEX idx_department_department_name ON trainingmanager.department (department_name);

CREATE TABLE trainingmanager.role (
    role_id uuid PRIMARY KEY,
    role_name text,
    role_type text,
    role_description text,
    created_dtm timestamp,
    updated_dtm timestamp,
    privilege frozen<privilege>
);
CREATE INDEX role_role_type_idx ON trainingmanager.role (role_type);
CREATE INDEX role_role_name_idx ON trainingmanager.role (role_name);

CREATE TABLE trainingmanager.user (
    id uuid PRIMARY KEY,
    address frozen<address>,
    created_dtm timestamp,
    departments set<frozen<department>>,
    email text,
    first_name text,
    gender text,
    is_active boolean,
    last_name text,
    password text,
    phone_number text,
    roles set<frozen<role>>,
    updated_dtm timestamp
);
CREATE INDEX user_roles_idx ON trainingmanager.user (values(roles));
CREATE INDEX user_email_idx ON trainingmanager.user (email);
CREATE INDEX idx_user_last_name ON trainingmanager.user (last_name);
CREATE INDEX user_departments_idx ON trainingmanager.user (values(departments));
CREATE INDEX idx_user_first_name ON trainingmanager.user (first_name);
CREATE CUSTOM INDEX user_firstname_like_idx ON trainingmanager.user (first_name) USING 'org.apache.cassandra.index.sasi.SASIIndex' WITH OPTIONS = {'mode': 'CONTAINS', 'analyzer_class': 'org.apache.cassandra.index.sasi.analyzer.StandardAnalyzer', 'case_sensitive': 'false'};
CREATE CUSTOM INDEX user_lastname_like_idx ON trainingmanager.user (last_name) USING 'org.apache.cassandra.index.sasi.SASIIndex' WITH OPTIONS = {'mode': 'CONTAINS', 'analyzer_class': 'org.apache.cassandra.index.sasi.analyzer.StandardAnalyzer', 'case_sensitive': 'false'}; 
CREATE CUSTOM INDEX user_email_like_idx ON trainingmanager.user (email) USING 'org.apache.cassandra.index.sasi.SASIIndex' WITH OPTIONS = {'mode': 'CONTAINS', 'analyzer_class': 'org.apache.cassandra.index.sasi.analyzer.StandardAnalyzer', 'case_sensitive': 'false'};

CREATE TABLE trainingmanager.department_roles (
	department_id uuid PRIMARY KEY,
	roles set<frozen<role>>
);
CREATE INDEX department_roles_roles_idx ON trainingmanager.department_roles (values(roles));

